<div id="todoapp">
    <div data-role="component" data-name="todo_header"></div>

    <div data-role="component" data-name="todo_list"></div>
  
    <div data-role="component" data-name="todo_footer"></div>
</div>

<script type="text/template" id="template-todo_header">
  <header>
    <h1>Todos by fractal.js</h1>
    <input id="new-todo" type="text" placeholder="What needs to be done?"/>
  </header>
</script>

<script type="text/template" id="template-todo_list">
  {{#show}}
  <section id="main" style="display: block;">
    <input class="toggle toggle-all" id="toggle-all" type="checkbox"/>
    <label for="toggle-all">Mark all as complete</label>      
    <ul id="todo-list">
      {{#todos}}
      <li data-id="{{id}}">
      <div class="view">
        <input class="toggle toggle-single" type="checkbox" />
        <label>{{title}}</label>
        <a class="destroy"></a>
      </div>
      <input class="edit" type="text" value="{{title}}" />
      </li>
      {{/todos}}
    </ul>
  </section>
  {{/show}}
</script>

<script type="text/template" id="template-todo_footer">
  {{#show}}
  <footer style="display: block;">
  <div class="todo-count"><b>{{all}}</b> items left</div>
    {{#checked}}
    <a id="clear-completed">Clear {{checked}} completed item{{#multiple}}s{{/multiple}}</a>
    {{/checked}}
  </footer>
  {{/show}}
</script>


